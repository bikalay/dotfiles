{
	"languageserver": {
		"golang": {
			"command": "gopls",
			"rootPatterns": ["go.mod"],
			"filetypes": ["go"]
		},

		"graphql": {
			"command": "graphql-lsp",
			"args": ["server", "-m", "stream"],
			// customize filetypes to your needs
			"filetypes": [
				"javascript",
				"typescript",
				"typescriptreact",
				"graphql"
			]
		}
	},

	"yaml.schemas": {
		"kubernetes": "/*.yaml"
	}
}
